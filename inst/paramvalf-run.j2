#!/bin/bash
# {{ edit_warning }}

set -e
set -u

mkdir -p output
logfile="output/paramvalf_run_$(date +"%Y-%m-%d_%H-%M").log"
exec > >(tee "$logfile")
exec 2>&1

echo "$( tput bold )$( tput setaf 6 )Scanning dependencies ...$( tput sgr0 )"
python3 {{ source_dir }}/scan_dependencies.py

dir="${1-.}"
shift

make -f "output/$dir/paramvalf-dependencies.mak" "$@"


